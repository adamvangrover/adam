    growth_pct = user_inputs.get('growth', 0.0)
    margin_pct = user_inputs.get('margin', 0.0)
    leverage_ratio = user_inputs.get('leverage', 0.0)
    sp_rating_input = str(user_inputs.get('sp_rating', "Not Provided"))


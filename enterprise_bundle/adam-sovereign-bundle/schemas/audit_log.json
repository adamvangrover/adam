{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Audit Log",
  "description": "Schema for regulatory audit logs.",
  "type": "object",
  "properties": {
    "timestamp": {"type": "string", "format": "date-time"},
    "action": {"type": "string"},
    "actor": {"type": "string"},
    "details": {"type": "object"}
  },
  "required": ["timestamp", "action", "actor"]
}

{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Industry",
  "description": "Schema for an industry entity",
  "type": "object",
  "properties": {
    "id": { "type": "string", "description": "Unique identifier for the industry" },
    "name": { "type": "string", "description": "Name of the industry" },
    "description": { "type": "string", "description": "Brief overview of the industry" }
  },
  "required": ["id", "name"]
}
